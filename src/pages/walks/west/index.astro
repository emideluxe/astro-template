---
import { getCollection } from 'astro:content';
const walks = await getCollection('walks');
const westWalks = walks.filter(walk => walk.data.category === 'west');
---

<BaseLayout title="West Walks" description="Explore curated walks in Amsterdam's west.">
  <main>
    <section>
      <h2>West Walks</h2>
      <div class="walks-grid">
        {walks.length === 0 ? (
          <p>No walks in this category yet.</p>
        ) : (
          walks.map(walk => (
            <WalkCard {...walk.data} href={`/walks/${walk.id}`} />
          ))
        )}
      </div>
    </section>
  </main>
</BaseLayout>
