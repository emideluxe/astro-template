---
import { getCollection } from 'astro:content';
const walks = await getCollection('walks');
const westWalks = walks.filter(walk => walk.data.category === 'west');
---

<h1>West Walks</h1>
<div class="walks-list">
  {westWalks.length === 0 ? (
    <p>No walks available in this category yet.</p>
  ) : (
    westWalks.map(walk => (
      <a href={`/walks/${walk.id}`} class="walk-card">
        <h2>{walk.data.title}</h2>
        <p>{walk.data.description}</p>
      </a>
    ))
  )}
</div>
