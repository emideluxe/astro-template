---
const today = new Date();
---

<footer>
	<div class="footer-content">
		<div class="copyright">
			&copy; {today.getFullYear()} Plumbus Industries. All rights reserved across infinite dimensions.
		</div>
	</div>
</footer>
<style>
	footer {
		padding: 2em 1em;
		background: rgba(26, 71, 42, 0.3);
		backdrop-filter: blur(10px);
		border-top: 1px solid rgba(151, 206, 76, 0.1);
		color: var(--text);
		text-align: center;
		position: relative;
		margin-top: 4rem;
	}

	.footer-content {
		max-width: 2400px;
		margin: 0 auto;
		display: flex;
		justify-content: space-between;
		align-items: center;
		flex-wrap: wrap;
		gap: 1rem;
	}

	.copyright {
		font-size: 0.9em;
		opacity: 0.8;
	}

	.social-links {
		display: flex;
		justify-content: center;
		gap: 1em;
	}

	.social-links a {
		color: var(--text);
		text-decoration: none;
		padding: 0.5em;
		border-radius: 50%;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
	}

	.social-links a:hover {
		color: var(--secondary);
		background: rgba(151, 206, 76, 0.1);
		transform: translateY(-2px);
	}

	.social-links svg {
		width: 24px;
		height: 24px;
		transition: color 0.3s ease;
	}

	.social-links a:hover svg {
		color: var(--secondary);
	}

	@media (max-width: 720px) {
		.footer-content {
			flex-direction: column;
			text-align: center;
		}

		.social-links {
			margin-top: 1rem;
		}
	}
</style>