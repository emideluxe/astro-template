---
// ==========================================
// HEADER NAVIGATION CUSTOMIZATION
// ==========================================
// This component controls the main site navigation.
// To customize the menu structure, modify the sections below.

import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';

// Get cities for dropdown menu
const cities = await getCollection('cities');
---

<header class="header-nav">
	<nav>
		<!-- ==========================================
		     MAIN NAVIGATION MENU - CUSTOMIZE HERE
		     ========================================== -->
		<div class="internal-links">
			<!-- 1. SITE LOGO/TITLE -->
			<HeaderLink href="/">{SITE_TITLE}</HeaderLink>

			<!-- 2. WALKS DROPDOWN MENU (CATEGORIES) -->
			<div class="dropdown">
                <button class="dropdown-toggle nav-link main-menu-link">
                    Walks
                    <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                        <polyline points="6 9 12 15 18 9"></polyline>
                    </svg>
                </button>
                <div class="dropdown-menu">
                    <a href="/walks/center" class="main-menu-link">Center</a>
                    <a href="/walks/south" class="main-menu-link">South</a>
                    <a href="/walks/east" class="main-menu-link">East</a>
                    <a href="/walks/west" class="main-menu-link">West</a>
                    <div class="divider"></div>
                    <a href="/walks" class="main-menu-link">View All Walks</a>
                </div>
            </div>

            <!-- BLOGPOSTS MENU ITEM -->
            <HeaderLink href="/blog" class="main-menu-link">Blogposts</HeaderLink>

            <!-- 3. STATIC MENU ITEMS -->
            <HeaderLink href="/about" class="main-menu-link">About</HeaderLink>
			
			<!-- EXAMPLES OF ADDITIONAL MENU ITEMS: -->
			<!-- <HeaderLink href="/blog">Blog</HeaderLink> -->
			<!-- <HeaderLink href="/restaurants">Restaurants</HeaderLink> -->
			<!-- <HeaderLink href="/hotels">Hotels</HeaderLink> -->
		</div>
		
		<!-- ==========================================
		     SOCIAL LINKS - CUSTOMIZE HERE
		     ========================================== -->
		<div class="social-links">
			<!-- ADD MORE SOCIAL LINKS HERE: -->
			<!-- 
			<a href="https://twitter.com/yourhandle" target="_blank">
				<span class="sr-only">Twitter</span>
				[Twitter SVG icon]
			</a>
			<a href="https://instagram.com/yourhandle" target="_blank">
				<span class="sr-only">Instagram</span>
				[Instagram SVG icon]
			</a>
			-->
		</div>
	</nav>
</header>
<style>
:root {
  --primary: #2a623d;
  --primary-dark: #1a472a;
  --secondary: #97ce4c;
  --text: #e0e0e0;
  --background: #0d1f13;
  --accent: #44281d;
  --glow: rgba(151, 206, 76, 0.3);
}
.header-nav {
  background: var(--background);
  color: var(--text);
  box-shadow: 0 2px 16px rgba(0,0,0,0.2);
  padding: 0.5rem 0;
}
nav {
		display: flex;
		align-items: center;
		justify-content: space-between;
		padding: 1rem 0;
		max-width: 1200px;
		margin: 0 auto;
	}

	.internal-links {
		display: flex;
		align-items: center;
		gap: 2rem;
	}

	.internal-links > * {
  font-weight: 700;
  font-size: 1.2rem;
  color: var(--secondary);
  text-shadow: 0 0 8px var(--glow);
  letter-spacing: 0.03em;
  transition: color 0.2s, text-shadow 0.2s;
}

.internal-links > *:hover {
  color: var(--primary);
  text-shadow: 0 0 16px var(--glow);
}

	.dropdown {
		position: relative;
	}

	.dropdown-toggle {
		display: flex;
		align-items: center;
		gap: 0.25rem;
		padding: 0.5rem 0;
		background: none;
		border: none;
		color: var(--secondary);
		font-weight: 700;
		font-size: 1.2rem;
		cursor: pointer;
		text-shadow: 0 0 8px var(--glow);
		padding: 0.5rem 1rem;
		border-radius: 8px;
		transition: background 0.2s;
	}

	.dropdown-toggle:hover {
  background: var(--primary-dark);
  color: var(--secondary);
}

	.dropdown-menu {
		position: absolute;
		top: 100%;
		left: 50%;
		transform: translateX(-50%);
		background: var(--background);
		border: 1px solid var(--primary-dark);
		box-shadow: 0 4px 24px rgba(0,0,0,0.4);
	}

	.dropdown-menu a {
		display: block;
		padding: 0.5rem 1.5rem;
		color: var(--secondary);
		font-weight: 600;
		text-decoration: none;
		text-shadow: 0 0 8px var(--glow);
	}

	.dropdown-menu a:hover {
		background: var(--primary-dark);
		color: var(--primary);
	}

	.divider {
		height: 1px;
		background: #e0e0e0;
		margin: 0.5rem 0;
	}

	.social-links {
		display: flex;
		align-items: center;
		gap: 1rem;
	}

	.social-links a {
		color: rgb(var(--gray));
		transition: color 0.2s;
	}

	.social-links a:hover {
		color: #4078c0;
	}

	.social-links svg {
		width: 20px;
		height: 20px;
	}

	@media (max-width: 720px) {
		.social-links {
			display: none;
		}

		.internal-links {
			gap: 1rem;
		}

		.dropdown-toggle {
			font-size: 0.875rem;
		}
	}
</style>