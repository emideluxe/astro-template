---
import { getCollection } from 'astro:content';
const walks = await getCollection('walks');
const southWalks = walks.filter(walk => walk.data.category === 'south');
---

<BaseLayout title="South Walks" description="Explore curated walks in Amsterdam's south.">
  <main>
    <section>
      <h2>South Walks</h2>
      <div class="walks-grid">
        {walks.length === 0 ? (
          <p>No walks in this category yet.</p>
        ) : (
          walks.map(walk => (
            <WalkCard {...walk.data} href={`/walks/${walk.id}`} />
          ))
        )}
      </div>
    </section>
  </main>
</BaseLayout>
